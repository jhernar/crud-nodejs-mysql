<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>
            Agregar link
          </h3>
        </div>
        <div class="card-body">
          <form action="/links/add" method="POST">
            <div class="form-group" style="margin-top: 5;">
              <input type="text" class="form-control" name="title" placeholder="title" autofocus />

            </div>
            <div class="form-group" style="margin-top: 8;">
              <input type="url" class="form-control" name="url" placeholder="Url" />
            </div>
            <div class="form-group" style="margin-top: 8;">
              <textarea name="description" rows="2" class="form-control" placeholder="Descripcion"></textarea>
            </div>
            <div class="form-group" style="margin-top: 8;">
              <button class="btn btn-success btn-block">
                Guardar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>