<div class="container p-44">
    <div class="row">
        {{#each links}}
            <div class="col-md-5" style="margin-top: 30;">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">
                            {{description}}
                        </p>
                        <p>
                            {{timeago created_at}}
                        </p>
                            <a href="/links/delete/{{id}}" class="btn btn-danger">Borrar</a>
                            <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto" style="margin-top: 30;">
                <div class="card card-body text-center">
                    <p>
                        No hay links creados aun
                        <br>
                        <a href="/links/add">Crear uno</a>
                    </p>
                </div>
            </div>
        {{/each}}
    </div>
</div>